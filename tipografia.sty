\renewcommand{\section}[1]{
\pagebreak[4]\needspace{6\baselineskip}
{\vspace{0pt}\centering\LARGE\addtocounter{chapter}{1}\addchaptertocentry{}{#1}\addchapmark{#1}\textsc{#1}\par}}

\newcommand{\sectioninfo}[2]{
\pagebreak[4]\needspace{7\baselineskip}
{\vspace{0pt}\centering\LARGE\addtocounter{chapter}{1}\addchaptertocentry{}{#1}
\addchapmark{#1}\textsc{#1}\par
\centering\normalsize\emph{#2}\par}}

\renewcommand{\subsection}[1]{
\pagebreak[3]\needspace{5\baselineskip}
{\returntogrid\centering\Large\addtocounter{section}{2}\addsubsectiontocentry{}{#1}
\addsecmark{#1}\textsc{\color{red}{#1}}\par}}

\newcommand{\subsectioninfo}[2]{
\pagebreak[3]\needspace{5\baselineskip}
{\returntogrid\centering\Large\addtocounter{section}{2}\addsubsectiontocentry{}{#1}
\addsecmark{#1}\textsc{\color{red}{#1}}\par
\centering\normalsize\textit{#2}\par\vspace{0pt}}}

\renewcommand{\subsubsection}[1]{
\pagebreak[2]\needspace{4\baselineskip}
{\vspace{-0.23\baselineskip}\centering\large
\addtocounter{subsection}{3}\addsubsubsectiontocentry{}{#1}\addsecmark{#1}
\textsc{#1}\par}}

\newcommand{\subsubsectioninfo}[2]{
\pagebreak[2]\needspace{5\baselineskip}
{\vspace{0pt}\centering\large
\addtocounter{subsection}{3}\addsubsubsectiontocentry{}{#1}\addsecmark{#1}\textsc{#1}\par
\centering\normalsize\emph{#2}\par\vspace{0pt}}}

